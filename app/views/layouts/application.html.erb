<!DOCTYPE html>
<html>
<head>
  <title>KingsOfChaos Reborn</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class='row'>
        <h1> <%= link_to 'KoC Reborn', root_path %> </h1>
    </div>
    <nav>
      <div class="row">
        <div class="left">
          <!-- Always show a home link -->

          <% if session[:user_id] %>
            <%= link_to current_user.username, user_path(current_user) %>
            <%= link_to 'Log Out', log_out_path %>

          <% else %>
            <%= link_to 'Log In', login_path %>
            <%= link_to 'Sign Up', new_user_path() %>
          <% end %>
        </div>
        <div class="right">
          <% if session[:user_id] %>
            <%= User.find(session[:user_id]).username %>
          <% end %>
        </div>
      </div>
      <hr>
      <% if current_user %>
        <div class="row sub_nav">
          <!-- Sub-nav -->
          <!-- Convert to dropdown eventually? -->
          <%= link_to 'Attack', users_path() %>
          <%= link_to 'Shop', edit_user_path(current_user) %>
          Logs

        </div>
      <% end %>
    </nav>
  </header>
<div class="container" style="margin: 10px;">
  <%= yield %>
</div>

</body>
</html>
